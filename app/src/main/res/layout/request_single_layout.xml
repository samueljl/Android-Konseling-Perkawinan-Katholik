<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/req_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/avatar_default" />

    <TextView
        android:id="@+id/req_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/req_single_image"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/req_single_image"
        android:layout_toRightOf="@+id/req_single_image"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/req_single_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/req_single_name"
        android:layout_alignBottom="@+id/req_single_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="19dp"

        android:layout_marginRight="19dp"
        android:background="@drawable/rounded_rectangle_role"
        android:fontFamily="sans-serif-condensed"
        android:padding="1dp"
        android:paddingBottom="1dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="1dp"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/req_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/req_single_image"
        android:layout_alignLeft="@+id/req_single_name"
        android:layout_alignStart="@+id/req_single_name"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>